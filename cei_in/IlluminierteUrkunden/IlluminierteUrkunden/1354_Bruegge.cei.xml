            <cei:body>
                <cei:idno id="1354_Bruegge">1354-99-99_Bruegge</cei:idno>
                <cei:chDesc>
                    <cei:abstract><cei:index indexName="Illurk-Urkundenart">Bischofsammelindulgenz</cei:index> für Brügge, Spital von
                        Onze-Lieve-Vrouw-Ter-Potterie.</cei:abstract>
                    <cei:issued>
                        <cei:placeName>Avignon und Brügge (Ausstattung)</cei:placeName>
                        <cei:dateRange from="13549999" to="13549999">1354-99-99</cei:dateRange>
                    </cei:issued>
                    <cei:witnessOrig>
                        <cei:traditioForm>Original</cei:traditioForm>
                        <cei:figure/>
                        <cei:figure>
                            <cei:graphic url="http://images.monasterium.net/illum/IllUrk/1354_Bruegge-potterie.jpg"/>
                        </cei:figure>
